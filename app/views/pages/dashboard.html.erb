row.cell(text: 'Draft')
row.cell(text: '1', numeric: true)

end; body.row do |row|
row.cell(text: 'Charmander')
row.cell(text: 'Fire')
row.cell(text: 'Draft')
row.cell(text: 'Draft')
row.cell(text: '4', numeric: true)

end; body.row do |row|
row.cell { 'Squirtle' }
row.cell { 'Water' }
row.cell(text: 'Draft')
row.cell(text: 'Draft')
