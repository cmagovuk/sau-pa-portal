<%= f.govuk_radio_buttons_fieldset choice_field.to_sym, 
    legend: { class: "govuk-fieldset__legend" },
    small:true do %>
        <% PostReport::YES_NO_OPTIONS.each_with_index do |opt, idx| %>
        <% if opt != "y" %>
            <%= f.govuk_radio_button choice_field.to_sym, opt, link_errors: idx == 0 %>
        <% else %>
            <%= f.govuk_radio_button choice_field.to_sym, opt do %>
            <%= f.govuk_text_area "#{choice_field}_text".to_sym, max_chars: PostReport::MAX_CHAR_COUNT %>
            <% end %>
        <% end %>
    <% end %>
<% end %>
