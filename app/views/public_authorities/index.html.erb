<% title(t('.page_title')) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
<%= govuk_table do |table|
  table.with_caption(size: 'l', text: t(".heading"))

  table.with_head do |head|
    head.with_row do |row|
      row.with_cell(header: true, text: 'Name')
      row.with_cell(header: true, text: 'Action')
    end
  end

  table.with_body do |body|
    @authorities.each do |auth| 
      body.with_row do |row|
        row.with_cell(text: auth.pa_name)
        row.with_cell do |cell| %>
          
    <dd class="govuk-summary-list__actions govuk-!-padding-top-0 govuk-!-padding-bottom-0">
      <ul class="govuk-summary-list__actions-list">
        <li class="govuk-summary-list__actions-list-item">
          <%= govuk_link_to "Edit", edit_public_authority_path(auth), no_visited_state: true %>
        </li>
        <li class="govuk-summary-list__actions-list-item">
          <%= govuk_link_to "View users", public_authority_path(auth), no_visited_state: true %>
        </li>
        <li class="govuk-summary-list__actions-list-item">
          <%= govuk_link_to "Manage sub-authorities", assign_sub_public_authority_path(auth), no_visited_state: true %>
        </li>
      </ul>
    </dd>
    <%    end
      end
    end
  end
end
%>

<div class="govuk-button-group">
  <%= govuk_button_link_to t(".add_pa_button"), new_public_authority_path %>
</div>
</div>
</div>