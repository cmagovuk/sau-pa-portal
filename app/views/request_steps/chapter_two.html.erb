<% title(t('.page_title')) %>
<%= render partial: 'back_link' %>

<h1 class="govuk-heading-l"><%= t('.heading') %></h1>
<%= form_for @request, url: request_step_path(params[:id]), :as => :request do |f| %>
  <%= f.govuk_error_summary %>
    <%= f.govuk_radio_buttons_fieldset(:is_c2_relevant, small:true, 
                                       legend: {
                                         text: t("helpers.legend.request.is_c2_relevant", type: scheme_subsidy_name(@request).downcase ),
                                         class:"govuk-fieldset__legend govuk-!-font-weight-regular" }) do %>
      <%= f.govuk_radio_button :is_c2_relevant, :n, link_errors: true %>
      <%= f.govuk_radio_button :is_c2_relevant, :y do %>
        <%= f.govuk_text_area :c2_description, max_words: Request::MAX_WORDCOUNT, 
              hint: -> do %>
                <%=  t("helpers.hint.request.c2_description_html") %>
              <% end %>        
    <% end %>
  <% end %>

  <%= f.govuk_submit t("buttons.submit") %>
<% end %>
