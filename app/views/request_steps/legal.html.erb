<% title(t('.page_title')) %>
<%= render partial: 'back_link' %>

<%= form_for @request, url: request_step_path(params[:id]), :as => :request do |f| %>
  <%= f.govuk_error_summary %>
  <%= f.govuk_fieldset legend: {text: t('.fieldset_legend'), size: 'l', tag: 'h1'},
    caption: {text:t("helpers.caption.request.characteristics", type: scheme_subsidy_name(@request))} do %>

      <%= f.govuk_text_area :legal, width: 'two-thirds', max_words: Request::MAX_WORDCOUNT, 
          label: { text: t("helpers.label.request.legal.#{@request.scheme_subsidy}") },
          hint: { text: t("helpers.hint.request.legal.#{@request.scheme_subsidy}") } %>

      <%= f.govuk_text_area :policy, width: 'two-thirds', max_words: Request::MAX_WORDCOUNT,
          label: { text: t("helpers.label.request.policy", type: scheme_subsidy_name(@request).downcase ) },
          hint: { text: t("helpers.hint.request.policy", type: scheme_subsidy_name(@request).downcase ) } %>
  <% end %>

  <%= f.govuk_submit %>
<% end %>