<% title(t('.page_title')) %>
<%= render partial: 'back_link' %>

<%= form_for @request, url: request_step_path(params[:id]), :as => :request do |f| %>
  <%= f.govuk_error_summary %>
      <%= f.govuk_collection_check_boxes :sectors, 
       Request::Sectors::SECTOR_OPTIONS, ->(option) {option}, ->(option) {option},
       legend: {text: t("helpers.legend.request.sectors.#{@request.scheme_subsidy}"), size:"l", tag:"h1"},
       caption: { text: t("helpers.caption.request.characteristics", type: scheme_subsidy_name(@request)), size: 'm' },
       hint: {text: t("helpers.hint.request.sectors.#{@request.scheme_subsidy}")},
       small:true %>

  <%= f.govuk_submit %>
<% end %>