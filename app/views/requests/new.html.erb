<% title(t('.page_title')) %>

<%= form_for @request_type_form, url: requests_path, :as => :request do |f| %>
  <%= f.govuk_error_summary %>
  <%= f.govuk_collection_radio_buttons :scheme_subsidy, 
     RequestTypeForm::OPTIONS, ->(option) {option}, nil, legend: {size: "l", tag: 'h1'} %>
  <%= f.govuk_submit t("buttons.submit") %>
<% end %>