<% title(t('.page_title')) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_panel(title_text: t(".panel_title")) do %>
       Your reference number is<br />
       <strong><%= @request.reference_number %></strong>
    <% end %>
    <%= if @request.referral_type == "soi" || @request.referral_type == "ssi"
          t(".confirmation_int_text_html")
        else
          t(".confirmation_text_html")
        end
    %>
    <% if feedback_link.present? %>
    <p class="govuk-body">
      <%= govuk_link_to t(".feedback_link"),feedback_link, no_visited_state: true  %>
    </p>
    <% end %>
  </div>
</div>
<div class="govuk-button-group">
  <%= govuk_button_link_to 'Return to dashboard', requests_path, secondary: true %>
</div>
