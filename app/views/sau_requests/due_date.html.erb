<% title(t('.page_title')) %>
<% 
breadcrumbs = {
      t("dashboard")        => sau_dashboard_index_path,
      t("request_progress") => sau_request_path(@request),
      t("due_date") => nil
    }
%>

<%= govuk_breadcrumbs(breadcrumbs: breadcrumbs) %>
<%= form_for @request, url: set_due_date_sau_request_path, :as => :request do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_text_field :report_due_date, width: 'one-third', type:"date", min: Time.zone.today, max: Time.zone.today.days_since(Request::ReportDueDate::MAX_DAYS_AHEAD),
  label: {text: "Set the report due date", size:"m"} %>
  <%= f.govuk_submit t("buttons.submit") %>
<% end %>
