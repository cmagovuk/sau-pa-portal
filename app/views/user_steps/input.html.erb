<% title(t('.page_title')) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
<h1 class="govuk-heading-l"><%= t(".heading") %></h1>
<%= form_for @user, url: user_step_path(params[:id]), method: :patch, :as => :user do |f| %>
    <%= f.govuk_error_summary %>
    <%= f.govuk_collection_select :public_authority_id, @authorities,:last, :first, disabled: @user.id.present? %>
    <%= f.govuk_text_field :user_name, width:"two-thirds" %>
    <%= f.govuk_text_field :phone, width:"one-third" %>
    <%= f.govuk_text_field :email, width:"two-thirds", disabled: @user.id.present? %>
    <%= f.hidden_field :role, value:"su"%>
    <%= f.govuk_submit %>
<% end %>
</div>
</div>