<% title(t('.page_title')) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
<h1 class="govuk-heading-l"><%= t(".heading") %></h1>
<%= form_for @user, url: user_step_path(params[:id]), method: :patch, :as => :user do |f| %>
    <%= f.govuk_error_summary %>
    <%= f.govuk_collection_select :public_authority_id, @authorities,:last, :first %>
    <%= f.govuk_collection_radio_buttons :role, User::USER_ROLE_OPTIONS, ->(option) {option}, nil, 
      legend: { class: "govuk-fieldset__legend govuk-fieldset__legend--s govuk-!-font-weight-regular" },
      bold_labels: false, small:true %>
    <%= f.govuk_text_field :user_name, width:"two-thirds" %>
    <%= f.govuk_text_field :phone, width:"one-third" %>
    <%= f.govuk_text_field :email, width:"two-thirds", disabled: @user.id.present? %>
    <% if @user.id.present? %>
      <%= f.govuk_check_boxes_fieldset :disabled, legend: { class: "govuk-fieldset__legend govuk-fieldset__legend--s govuk-!-font-weight-regular" }, multiple: false do %>
          <%= f.govuk_check_box :disabled, "x", "", multiple: false, link_errors: true %>
      <% end %>
    <% end %>
    <%= f.govuk_submit %>
<% end %>
</div>
</div>