<% title(t('.page_title')) %>
<% 
breadcrumbs = {
      t("dashboard") => sau_dashboard_index_path,
      t("request_progress") => sau_request_path(params[:id]),
      "Withdraw restore" => nil
    }
%>
<%= govuk_breadcrumbs(breadcrumbs: breadcrumbs) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-l"><%= t('.page_title') %></h1>

    <p class="govuk-body"><%= t('.summary', status: @request.internal_state.include?("Submitted") ? "Submitted" : "Accepted") %></p>

    <%= form_for @request, url: restore_withdraw_path, method: :post do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_submit t('.confirm_button'), class: "sau-submission-button" do
          govuk_button_link_to t(".cancel_btn"), sau_request_path, secondary: true
      end %>
    <% end %>
  </div>
</div>